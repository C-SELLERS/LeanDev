{
	"name": "Lean Dev",
	"dockerComposeFile": "docker-compose.yml",
	"workspaceFolder": "/Workspaces/Local",
	"service": "leandev",

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-dotnettools.csharp",
		"formulahendry.dotnet-test-explorer",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"eamodio.gitlens",
		"yzhang.markdown-all-in-one",
		"ms-azuretools.vscode-docker"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Post create commands; only runs on initial creation of container
	//"postCreateCommand": "",

	// Post start commands; runs each time the container is started
	"postStartCommand": "cp /Workspaces/Local/overrides/.vscode/ /Workspaces/Lean/ -r -f", // Override Lean .vscode files
}